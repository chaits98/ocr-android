<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>
        <shape android:shape="oval">
            <size
                android:width="40dp"
                android:height="40dp"
                />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="40dp"
                android:height="40dp"
                />
            <solid android:color="@color/polygonViewCircleStrokeColor" />
            <stroke
                android:color="@android:color/transparent"
                android:width="18dp"
                />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="40dp"
                android:height="40dp"

                />
            <solid android:color="@color/polygonViewCircleBackground" />
            <stroke
                android:color="@android:color/transparent"
                android:width="20dp"
                />
        </shape>
    </item>

</layer-list>