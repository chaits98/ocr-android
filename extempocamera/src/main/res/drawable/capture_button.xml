        <shape
            android:shape="oval">
            <size
                android:width="70dp"
                android:height="70dp" />
            <stroke
                android:width="35dp"
                android:color="#00000000"/>
        </shape>
    </item>

    <item>
        <shape
                android:shape="oval">
            <size
                    android:width="70dp"
                    android:height="70dp" />
            <stroke
                    android:width="8dp"
                    android:color="@color/colorPrimaryDark"/>
        </shape>
    </item>

    <item>
        <shape
                android:shape="oval">
            <size
                    android:width="70dp"
                    android:height="70dp" />
            <stroke
                    android:width="5dp"
                    android:color="@color/colorPrimary"/>
        </shape>
    </item>

</layer-list>